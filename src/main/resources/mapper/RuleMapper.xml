<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lwj.schedule.mapper.RuleMapper">

    <resultMap id="BaseResultMap" type="com.lwj.schedule.entity.Rule">
            <result property="ruleType" column="Rule_type" jdbcType="VARCHAR"/>
            <result property="ruleShop" column="Rule_shop" jdbcType="VARCHAR"/>
            <result property="ruleValue" column="Rule_value"
                    javaType="com.alibaba.fastjson.JSONObject"
                    jdbcType="OTHER"
                    typeHandler="com.lwj.schedule.handler.JsonTypeHandler"
            />
    </resultMap>

    <sql id="Base_Column_List">
        Rule_type,Rule_shop,Rule_value
    </sql>
    <insert id="CreateRules">
        INSERT INTO Rule VALUES(#{rule_type}, #{rule_shop}, #{rule_value})
    </insert>
    <update id="ModifyRules">
        UPDATE Rule
        SET Rule_value = #{rule_value}
        WHERE Rule_type = #{rule_type} and Rule_shop = #{rule_shop}
    </update>
    <delete id="DeleteRules">
        DELETE FROM Rule
        WHERE Rule_type = #{rule_type} and Rule_shop = #{rule_shop}
    </delete>

    <select id="listAllRules" resultType="com.lwj.schedule.entity.Rule">
        select Rule_type, Rule_shop, Rule_value from Rule
    </select>

    <select id="SearchByRules" resultType="com.lwj.schedule.entity.Rule">
        select * from Rule where Rule_type like "%"#{rule_type}"%" and Rule_shop like "%"#{rule_shop}"%"
    </select>
    <select id="SearchByType" resultType="com.lwj.schedule.entity.Rule">
        select * from Rule where Rule_type like "%"#{rule_type}"%"
    </select>
    <select id="SearchByShop" resultType="com.lwj.schedule.entity.Rule">
        select * from Rule where Rule_shop like "%"#{rule_shop}"%"
    </select>
</mapper>
